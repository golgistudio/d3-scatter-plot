{
  "root": {
    "src": "./demoApp/src",
    "dest": "./demoApp/public",
    "qualityRoot" : "./demoApp/quality",
    "rootDir" : "."
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "./demoApp/public"
      }
    },

    "js": {
      "src": "js",
      "dest": "js",
      "extractSharedJs": true,
      "entries": {
        "main": ["./main.js"]
      },
      "extensions": ["js"]
    },

    "jshint": {
      "src": "js",
      "props": "./js/.jshintrc",
      "extensions": ["js", "jsx"]
    },

    "jsdoc": {
      "src": "js",
      "dest": "docs",
      "extensions": ["js", "jsx"]
    },

    "sass": {
      "src": "stylesheets",
      "dest": "stylesheets",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true
      },
      "extensions": ["sass", "scss"]
    },

    "purecss": {
      "src": "styles",
      "dest": "styles",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "extensions": ["css", "dummy"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif", "ico"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg", "otf"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    }
  }
}
